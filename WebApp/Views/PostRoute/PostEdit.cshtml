    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-outline card-info">
                        <form id="editform">
                            <!-- /.card-header -->
                            <div class="card-body pad">
                                <div class="form-group row">
                                    <div class="col-md-12">
                                       
                                        <input class="form-control" type="text" id="id" hidden name="id" value="@Model.Id" required="required">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <label for="label">Title </label>
                                        <input class="form-control" type="text" id="title" name="title" value="@Model.Title" required="required">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Select Tags</label>
                                    <select multiple="" id="tags" name="tags" class="form-control">                                  
                                    </select>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <textarea class="textarea" name="content" placeholder="Place some text here"
                                                  style=" height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">@Model.Content</textarea>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" id="editBtn" class="btn btn-primary">Kaydet</button>
                        </form>

                    </div>
                </div>
                <!-- /.col-->
            </div>
            <!-- ./row -->
        </section>
        <!-- /.content -->
    </div>

