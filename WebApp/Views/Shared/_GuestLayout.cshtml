    <script src="~/src/constants/urls.js" type="text/javascript"></script>
    <script src="~/js/main.js"></script>
    <script src="~/src/js/site.js"></script>
    <script src="~/src/js/plugins.init.js"></script>
    <script src="~/src/utils/selector.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/js/clean-blog.min.js"></script>
    <link href="~/css/clean-blog.min.css" rel="stylesheet">
    <!-- Custom scripts for this template -->
    <script src="~/js/clean-blog.min.js"></script>
    <script src="~/views/js/logout.js"></script>
    <link href="~/css/clean-blog.min.css" rel="stylesheet">
    <script>        
        if ($("#isUser").val()==false) {
            $("#logout").hide();
        }
    </script>
</body>
</html>


